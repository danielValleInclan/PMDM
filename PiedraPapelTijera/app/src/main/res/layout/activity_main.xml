<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="406dp"
        android:layout_height="177dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.692">

        <ImageButton
            android:id="@+id/buttonTijera"
            android:layout_width="191dp"
            android:layout_height="174dp"
            android:layout_weight="1"
            android:contentDescription="imagenTijera"
            android:src="@drawable/scissors_pc" />

        <ImageButton
            android:id="@+id/buttonPiedra"
            android:layout_width="118dp"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:contentDescription="imagen Piedra"
            android:src="@drawable/rock_pc" />

        <ImageButton
            android:id="@+id/buttonPapel"
            android:layout_width="108dp"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:contentDescription="imagen Papel"
            android:src="@drawable/paper_pc" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Jugar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="149dp"
        android:layout_height="148dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</androidx.constraintlayout.widget.ConstraintLayout>